#define _CRT_SECURE_NO_WARNINGS
#include <cstdlib>
#include <cstdio>
struct Employee
{
	int num; // идентификационный номер сотрудника
	char name[10]; // имя сотрудника
	double hours; // количество отработанных часов
};
int main(int argc, char* argv[])
{
	FILE* fin = fopen(argv[1], "rb");
	FILE* fout = fopen(argv[2], "w");
	Employee tmp;
	fprintf(fout, "FILE_REPORT:%s\n", argv[1]);
	while (fread(&tmp, sizeof(Employee), 1, fin))
	{
		fprintf(fout, "%d,%s,%d,%d\n", tmp.num, tmp.name, tmp.hours, tmp.hours * atoi(argv[3]));
	}
	fclose(fout);
	fclose(fin);
	return 0;
}
